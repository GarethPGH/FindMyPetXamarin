<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindMyPetUI.Views.NewDogPage"
             Title="New Dog">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Dog Name" FontSize="Medium" />
            <Entry Text="{Binding Dog.Name}" FontSize="Small" />
            <Label Text="Owner Name" FontSize="Medium"/>
            <Entry Text="{Binding Dog.OwnerName}" FontSize="Small"/>
            <Label Text="Description" FontSize="Medium" />
            <Editor Text="{Binding Dog.Description}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
